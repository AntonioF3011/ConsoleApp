<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CRM.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CRM.MAUI"
    xmlns:views="clr-namespace:CRM.MAUI.Views"
    TitleColor="Snow"
    >

    
    <ShellContent
        
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="MainPage" />

    <ShellContent
        Title="Management"
        ContentTemplate="{DataTemplate views:ProductManagementView}"
        Route="Management" />

    <ShellContent
        Title="Cart"
        ContentTemplate="{DataTemplate views:CartView}"
        Route="Cart" />

    <ShellContent
       Title="Product View"
       ContentTemplate="{DataTemplate views:ProductView}"
       Route="Product" />

    <ShellContent
       Title="Description View"
       ContentTemplate="{DataTemplate views:DescriptionView}"
       Route="Description" />




</Shell>
