<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM.MAUI.Views.ShopView"
             Title=""
             NavigatedTo="ContentPage_NavigatedTo">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <BoxView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6"
                 Color="#131A22" />
            <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6"
                 Color="#232F3E" />

            <Label Grid.Column="0" Grid.Row="0"
               Text="Amazon"
               FontSize="Large"
               FontAttributes="Bold"
               Margin="10,2,105,0" />

            <Entry Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"
               Text="{Binding InventoryQuery}"
            
               TextColor="Black"
               BackgroundColor="White" 
               VerticalOptions="Start"
               Margin="10,10,0,0"
               HorizontalOptions="FillAndExpand"/>

            <Button Grid.Column="3" Grid.Row="0"
                Clicked="InventorySearchClicked"
                Text="ðŸ”" 
                BackgroundColor="DarkSalmon"
                Margin="0,10,0,0"
                VerticalOptions="Start"/>

            <Button Grid.Column="4" Grid.Row="0" 
                HorizontalOptions="Start"
                FontSize="Medium"
                Text="ðŸ”§" 
                BackgroundColor="Transparent"
                Margin="0,0,0,0"
                Clicked="ManageInventoryClicked" />

            <Button Grid.Column="5" Grid.Row="0"
                Margin="0,0,0,0"
                Text="ðŸ›’Cart" 
                TextColor="DarkSalmon"
                HorizontalOptions="End"
                VerticalOptions="FillAndExpand"
                FontSize="20"
                BackgroundColor="Transparent" 
                Clicked="ShopClicked"/>


            <Label  Grid.Column="5" 
                    Grid.Row="1" 
                    Text="{Binding TotalPrice, StringFormat='{0:C}'}"
                    FontSize="Micro" 
                    HorizontalOptions="End" Margin="0,0,0,10" />
            
            
            <Label Grid.Column="0" Grid.Row="2"
               Text="Products"
               TextColor="DarkSalmon"
               FontSize="Subtitle"
               Margin="10,0,0,10"
               FontAttributes="Bold"
               HorizontalOptions="Start"/>

            <Label Grid.Column="1" Grid.Row="2"
               TextColor="DarkSalmon"
               Text="In Stock"
               FontAttributes="Bold"
               FontSize="Subtitle"
               HorizontalOptions="Center"/>

            <Label Grid.Column="2" Grid.Row="2"
               TextColor="DarkSalmon"
               Text="Price"
               FontAttributes="Bold"
               FontSize="Subtitle"
               HorizontalOptions="Center"/>


            <ListView  Grid.Row="3" Grid.ColumnSpan="6"
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="700"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                   Margin="10,0,0,0"
                                   Text="{Binding Name}"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"/>

                                <Label Grid.Column="1"
                                   Margin="10,0,0,0"
                                   Text="{Binding Quantity}"
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"/>

                                <Label Grid.Column="2"
                                   Margin="10,0,0,0"
                                   Text="{Binding DisplayPrice}"
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"/>

                                <Button Grid.Column="4"
                                        
                                    Text="?"
                                    HorizontalOptions="Start"
                                    FontSize="Default"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    Clicked="DescriptionClicked"/>

                                <Button Grid.Column="4"
        
                                    Text="+"
                                    HorizontalOptions="End"
                                    FontSize="Medium"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    Clicked="AddToCartClicked"
                                    />

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        

        </Grid>
    </ScrollView>
</ContentPage>